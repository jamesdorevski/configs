// Place your key bindings in this file to override the defaults
[
    {
        "key": "shift+k",
        "command": "editor.action.showHover",
        "when": "editorTextFocus && inputFocus && vim.mode == 'Normal'"
    },
    {
        "key": "ctrl+m ctrl+i",
        "command": "-editor.action.showHover",
        "when": "editorTextFocus"
    }
]